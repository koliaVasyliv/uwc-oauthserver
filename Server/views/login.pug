
extends ./layout.pug

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        if messages
          each message in messages
            .panel.panel-danger
              .panel-heading p #{message}
        h3.text-center Sign in to Single Sign Service
        hr
        form(class='form-signin', action='/login', method='POST')
          .form-group
            label(for='username') Username
            input(type='text', name='username', id='username' class='form-control', placeholder='Email or username',required, autofocus)
          .form-group
            label(for='password') Password
            input(type='password', name='password', id='password' class='form-control', placeholder='Password', required)
          button(class='btn btn-lg btn-success btn-block', type='submit') Sign in
        hr
        p.text-center New to Single Sign Service? &nbsp;
          a(href='/signup') Create an account.